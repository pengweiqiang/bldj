<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.bldj.lexiang.view.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="48dp" >
    </com.bldj.lexiang.view.ActionBar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/input_old_pwd" />

        <com.bldj.lexiang.view.ClearEditText
            android:id="@+id/old_pwd"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_weight="1" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/input_new_pwd2" />

        <com.bldj.lexiang.view.ClearEditText
            android:id="@+id/new_pwd"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_weight="1" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/input_new_pwd_again" />

        <com.bldj.lexiang.view.ClearEditText
            android:id="@+id/new_pwd2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_weight="1" />
    </LinearLayout>

    
    <Button 
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_height="wrap_content"
        android:text="@string/confirm_update"
        android:layout_gravity="center"
        />
    
</LinearLayout>