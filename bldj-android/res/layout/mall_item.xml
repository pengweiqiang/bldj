<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dip"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/mall_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/own_btn_rounded"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/mall_center_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher" />

            <Button
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_below="@+id/logo"
                android:text="购买"
                android:focusable="false"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="美容床" />

        <TextView
            android:id="@+id/product_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="美容床美容床美容床" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mall_center"
        android:orientation="horizontal"
        android:padding="3dip" >

        <TextView
            android:id="@+id/price_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="市场价：50元"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/price_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="一休价：50元"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/buy_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购买次数：50次"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="评级：5星"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>