<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    
    <com.bldj.lexiang.view.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="48dp" >
    </com.bldj.lexiang.view.ActionBar>
	
    
    <LinearLayout
        android:id="@+id/mall_center"
        android:layout_below="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/own_btn_rounded"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/mall_center_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher" />

            <Button
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_below="@+id/logo"
                android:text="点击购买"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="美容床" />

        <TextView
            android:id="@+id/product_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="美容床美容床美容床" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mall_center"
        android:orientation="horizontal"
        android:padding="3dip" >
         <TextView
            android:id="@+id/product_info"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="【美容床】美容床的一句话简介"
            android:textSize="13sp" />
        </LinearLayout>
        
    
    <!-- <LinearLayout 
        android:id="@+id/price_count_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
         
        
        
    </LinearLayout> -->
    
    
	    
    
    
       <RelativeLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_alignParentBottom="true"
           android:layout_marginLeft="5dip"
           android:layout_marginRight="5dip"
           android:layout_marginBottom="2dip"
           android:background="@drawable/own_btn_rounded"
           >
           <TextView 
               android:id="@+id/custom_service"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:text="联系客服"
               android:layout_centerVertical="true"
               />
           <Button 
               android:id="@+id/buy_now"
               android:layout_width="wrap_content"
               android:layout_height="35dp"
               android:text="立即购买"
               android:textSize="14sp"
               android:layout_centerInParent="true"
               />
          <TextView 
               android:id="@+id/add_cart"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="加入购物车"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               /> 
           
           
       </RelativeLayout>
	
</RelativeLayout>