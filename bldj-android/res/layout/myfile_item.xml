<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/btn_down_open"
            android:text="2014"
            android:textColor="@color/grey" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/year"
            android:src="@drawable/myfile_start" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start"
        android:layout_marginLeft="15dip" >

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:paddingLeft="8dip"
            android:text="12月05日"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/year_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:paddingLeft="27dip"
            android:text="2014年"
            android:textColor="@color/grey"
            android:textSize="11sp" />

        <View
            android:id="@+id/line"
            android:layout_width="65dip"
            android:layout_height="2dp"
            android:layout_below="@+id/year_item"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dip"
            android:background="@color/home_bg" />

        <ImageView
            android:id="@+id/leaf_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/year_item"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/line"
            android:src="@drawable/btn_appoinment_point" />

        <!--
        <RelativeLayout  
        android:id="@+id/relative"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_toRightOf="@+id/leaf_point"  
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
         >
        -->

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip"
            android:layout_toRightOf="@+id/leaf_point"
            android:background="@drawable/myfile_bg1"
            android:padding="15dip"
            android:text="今天身体状况很好今11212今天身体状况很好今天身体状况很好今天身体状况很好"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <!-- </RelativeLayout> -->

        <View
            android:id="@+id/line_leaf"
            android:layout_width="2dip"
            android:layout_height="60dip"
            android:layout_marginLeft="70dip"
            android:background="#248700" />

        <View
            android:id="@+id/line_leaf2"
            android:layout_width="2dip"
            android:layout_height="100dip"
            android:layout_below="@+id/leaf_point"
            android:layout_marginLeft="70dip"
            android:background="#248700" />

        <ImageView
            android:id="@+id/leaf1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaf_point"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dip"
            android:layout_marginTop="40dip"
            android:src="@drawable/myfile_leaf1" />

        <ImageView
            android:id="@+id/leaf2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaf_point"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28dip"
            android:layout_marginTop="40dip"
            android:src="@drawable/myfile_leaf2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_leaf2"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="65dip"
            android:src="@drawable/myfile_end"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>