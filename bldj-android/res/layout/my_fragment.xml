<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.bldj.lexiang.view.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="48dp" >
    </com.bldj.lexiang.view.ActionBar>

    <com.bldj.lexiang.view.SpringScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/myinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/own_btn_rounded"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/icon_ppw_user" />

                <TextView
                    android:id="@+id/tv_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:text="name"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_order"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/own_btn_rounded"
                android:drawableLeft="@drawable/btn_img_my_homepage"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/btn_img_open"
                android:gravity="left|center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/my_order"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_class"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/own_btn_rounded"
                android:drawableLeft="@drawable/btn_img_my_homepage"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/btn_img_open"
                android:gravity="left|center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/my_address"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_collect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/own_btn_rounded"
                android:drawableLeft="@drawable/btn_img_my_homepage"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/btn_img_open"
                android:gravity="left|center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/my_fav"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/own_btn_rounded"
                android:drawableLeft="@drawable/btn_img_my_homepage"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/btn_img_open"
                android:gravity="left|center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/my_coupon"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_homepage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/own_btn_rounded"
                android:drawableLeft="@drawable/btn_img_my_homepage"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/btn_img_open"
                android:gravity="left|center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/my_record"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_rename"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/own_btn_rounded"
                android:drawableLeft="@drawable/btn_img_my_homepage"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/btn_img_open"
                android:gravity="left|center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/check_version"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <Button
                android:id="@+id/btn_logout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/own_btn_rounded"
                android:drawablePadding="15dp"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/logout"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </com.bldj.lexiang.view.SpringScrollView>

</LinearLayout>