<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg" >

    <com.bldj.lexiang.view.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dip"
        android:background="@color/white" >
    </com.bldj.lexiang.view.ActionBar>

    
    <LinearLayout
        android:id="@+id/center_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionBar"
        android:layout_marginTop="5dip"
        android:background="@color/white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_image_height"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="3dip" >
        
             <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="时长：30分钟"
                    android:layout_marginBottom="10dp"
                     />
                
                <TextView
                    android:id="@+id/buy_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:layout_toRightOf="@+id/product_buy_img"
                    android:text="50人已经购买"
                     />
                
                </LinearLayout>
                <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一休价"
                        android:padding="2dip"
                        android:layout_marginRight="2dip"
                        android:textColor="@color/white"
                        android:background="@color/btn_bg_color"
                        />
                     <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥64.5/次"
                    android:textColor="@color/app_bg_color"
                    android:layout_marginBottom="10dp"
                     />
                     </LinearLayout>
                     
                       <TextView
                    android:id="@+id/price_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门店价：￥22.4/次"
                     />
                    
                    </LinearLayout>
                    
                
                <View 
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line"
                    android:layout_marginRight="10dip"
                    />
                
                 <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                       <TextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:drawableLeft="@drawable/btn_share"
                    android:textColor="@color/grey"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="5dip"
                    />
                
                         <TextView
                    android:id="@+id/invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请"
                    android:drawablePadding="5dip"
                    android:drawableLeft="@drawable/btn_invite"
                    android:textColor="@color/grey"
                     />
                     
                     
                     </LinearLayout>
                
                
            
            
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="3dip" >

            <LinearLayout
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:text="时长：30分钟"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="一休价：￥64.5/次"
                    android:textColor="@color/app_bg_color"
                    android:textSize="13sp" />
              <!--   <View 
                    android:layout_width="11dp"
                    android:layout_height="match_parent"
                    android:background="@color/home_bg"
                    /> -->

                <TextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="分享"
                    android:drawableLeft="@drawable/btn_share"
                    android:textColor="@color/grey"
                    />
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:orientation="horizontal" >

                <!--
                     <ImageView 
                    android:id="@+id/product_buy_img"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product_buy_img"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dip"
                    />
                -->
				
                <TextView
                    android:id="@+id/buy_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:layout_toRightOf="@+id/product_buy_img"
                    android:layout_weight="1"
                    android:text="50人已经购买"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/price_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="门店价：￥22.4/次"
                    android:textSize="13sp" />

                <!--
                 <ImageView
                    android:id="@+id/level"
                     android:layout_toRightOf="@+id/price_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:src="@drawable/level_star"
                    android:layout_centerVertical="true"
                     />
                 <ImageView 
                     android:layout_toRightOf="@+id/level"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/btn_fav"
                     android:layout_centerVertical="true"
                     />
                -->
                <!-- <View 
                    android:layout_width="11dp"
                    android:layout_height="match_parent"
                    android:background="@color/home_bg"
                    /> -->

                <TextView
                    android:id="@+id/invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="邀请"
                    android:layout_gravity="right"
                    android:drawablePadding="5dip"
                    android:drawableLeft="@drawable/btn_invite"
                    android:textColor="@color/grey"
                     />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dip"
            android:layout_marginTop="2dip"
            android:background="@color/line" />
    </LinearLayout>

    <WebView
        android:id="@+id/webView_product_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_info"
        android:layout_below="@+id/center_info"
        />
    
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="4dip"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dip"
            android:background="@color/grey"
            android:layout_below="@+id/webView_product_info"
             />
    <RelativeLayout
        android:id="@+id/bottom_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        
        android:background="@drawable/border"
        android:padding="10dip" >

        <TextView
            android:id="@+id/custom_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/btn_cust_service"
            android:gravity="center_vertical"
            android:text="联系客服"
            android:drawablePadding="3dip"
            android:layout_centerVertical="true"
            android:textColor="@color/grey" />

        <Button
            android:id="@+id/appointment_product"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/coners"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="预约该产品"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            style="@style/CustomFavCheckboxTheme"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/grey" />
    </RelativeLayout>

</RelativeLayout>