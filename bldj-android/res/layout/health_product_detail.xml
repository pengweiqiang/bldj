<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/home_bg"
    >

	<com.bldj.lexiang.view.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dip"
        android:background="@drawable/border" >
    </com.bldj.lexiang.view.ActionBar>
    


    <LinearLayout
        android:id="@+id/center_info"
        android:layout_below="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	
	    <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_image_height"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:src="@drawable/default_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dip" >

            <RelativeLayout
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时长：30分钟"
                    android:layout_marginRight="5dip"
                    android:textSize="13sp" />

                <TextView
                    android:layout_toRightOf="@+id/time"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一休价：￥64.5/次"
                    android:layout_marginLeft="5dip"
                    android:textColor="@color/app_bg_color"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/btn_share"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/info2"
                android:layout_marginTop="6dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >
				
                <ImageView 
                    android:id="@+id/product_buy_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product_buy_img"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dip"
                    />
                <TextView
                    android:id="@+id/buy_count"
                    android:layout_toRightOf="@+id/product_buy_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50人已经购买"
                    android:layout_marginRight="5dip"
                    android:textSize="13sp" />

                <TextView
                    android:layout_toRightOf="@+id/buy_count"
                    android:id="@+id/price_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="门店价:￥22.4/次"
                    android:textSize="13sp" />
                
                 <ImageView
                    android:id="@+id/level"
                     android:layout_toRightOf="@+id/price_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/level_star"
                    android:layout_centerVertical="true"
                     />
                 <ImageView 
                     android:layout_toRightOf="@+id/level"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/btn_fav"
                     android:layout_centerVertical="true"
                     />
                

                <ImageView
                    android:id="@+id/invite"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_invite"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
        
        <View 
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
        
    </LinearLayout>
    
    
     <WebView
         	android:paddingTop="4dip"
            android:id="@+id/webView_product_info"
            android:layout_width="match_parent"
            android:layout_below="@+id/center_info"
            android:layout_above="@+id/bottom_info"
            android:layout_height="match_parent" />
    
    

    <RelativeLayout
        android:id="@+id/bottom_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dip"
        android:padding="10dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/custom_service"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_cust_service"
            />

        <ImageView
            android:id="@+id/appointment_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_appoinment"
             />

        <ImageView
            android:id="@+id/collect"
            android:layout_toRightOf="@+id/custom_service"
            android:src="@drawable/btn_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:layout_centerVertical="true"
            android:text="收藏" />
    </RelativeLayout>

</RelativeLayout>