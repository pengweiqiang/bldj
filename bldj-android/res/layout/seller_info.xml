<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView 
        android:text="培训考核"
        android:paddingLeft="11dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        />
    
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="10dip"
       android:layout_marginTop="5dip"
       android:layout_marginBottom="5dip"
       >
       <TextView 
           android:layout_width="0dip"
           android:layout_weight="1"
           android:layout_height="40dip"
           android:gravity="center"
           android:background="@color/color_random_six"
           android:layout_marginRight="8dip"
           android:text="推拿技能培训"
           />
        <TextView 
           android:layout_width="0dip"
           android:layout_weight="1"
           android:layout_height="40dip"
           android:gravity="center"
           android:layout_marginRight="8dip"
           android:background="@color/color_random_seven"
           android:text="产品使用规范"
           />
         <TextView 
           android:layout_width="0dip"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_height="40dip"
            android:layout_marginRight="8dip"
            android:background="@color/color_random_five"
           android:text="仪表礼仪规范"
           />
       
   </LinearLayout>
   
       <TextView 
        android:text="个人简介"
        android:paddingLeft="11dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        />
   
     <TextView 
        android:id="@+id/person_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dip"
        android:layout_margin="5dip"
        android:textSize="11sp"
        android:text="毕业于北京中医药大学，10年理疗经验。擅长颈、肩、腰、背等，从师5年临床实验毕业于北京中医药大学，10年理疗经验。擅长颈、肩、腰、背等，从师5年临床实验"
        />
        <TextView 
        android:text="客户评价"
        android:paddingLeft="11dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:layout_marginBottom="5dip"
        />
        
        <com.bldj.lexiang.view.XListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/good_list_bg"
        android:divider="#00000000"
        android:visibility="visible" />
      
       <ProgressBar
        android:id="@+id/progress_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:max="100"
        android:visibility="gone" />
        

</LinearLayout>