<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:paddingTop="5dip"
            android:paddingBottom="5dip"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            
            >
		    <TextView
		        android:id="@+id/title_train" 
		        android:text="培训考核"
		        android:paddingLeft="6dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:drawableLeft="@drawable/title_info"
		        android:paddingRight="10dip"
		        android:drawablePadding="10dip"
		        />
		    <View 
		        android:layout_width="match_parent"
		        android:layout_gravity="center"
		        android:layout_height="1dp"
		        android:background="@color/home_bg"
		        android:layout_marginRight="10dip"
		        />
    </LinearLayout>
    
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="10dip"
       android:layout_marginTop="10dip"
       >
       <TextView 
           android:layout_width="0dip"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:drawableTop="@drawable/title_skill"
           android:layout_marginRight="8dip"
           android:drawablePadding="3dip"
           android:text="推拿技能培训"
           />
        <TextView 
           android:layout_width="0dip"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_marginRight="8dip"
           android:drawablePadding="3dip"
           android:drawableTop="@drawable/title_product_explain"
           android:text="产品使用规范"
           />
         <TextView 
           android:layout_width="0dip"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:drawableTop="@drawable/title_standard"
           android:text="仪表礼仪规范"
           android:drawablePadding="3dip"
           />
       
   </LinearLayout>
   </LinearLayout>
   
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_marginTop="10dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            >
		    <TextView
		        android:text="个人简介"
		        android:paddingLeft="6dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:drawableLeft="@drawable/title_personal_profile"
		        android:paddingRight="10dip"
		        android:drawablePadding="10dip"
		        />
		    <View 
		        android:layout_width="match_parent"
		        android:layout_gravity="center"
		        android:layout_height="1dp"
		        android:background="@color/home_bg"
		        android:layout_marginRight="10dip"
		        />
    </LinearLayout>
    
  	<TextView 
        android:id="@+id/person_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dip"
        android:padding="5dip"
        android:textSize="11sp"
        android:text="    毕业于北京中医药大学，10年理疗经验。擅长颈、肩、腰、背等，从师5年临床实验毕业于北京中医药大学，10年理疗经验。擅长颈、肩、腰、背等，从师5年临床实验"
        />
  	</LinearLayout>     
   
     
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_marginTop="10dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            >
		    <TextView
		        android:text="客户评价"
		        android:paddingLeft="6dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:drawableLeft="@drawable/title_evaluation"
		        android:paddingRight="10dip"
		        android:drawablePadding="10dip"
		        />
		    <View 
		        android:layout_width="match_parent"
		        android:layout_gravity="center"
		        android:layout_height="1dp"
		        android:background="@color/home_bg"
		        android:layout_marginRight="10dip"
		        />
    </LinearLayout>
        
        
        <com.bldj.lexiang.view.XListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dip"
        android:divider="#00000000"
        android:visibility="visible" />
      
       <ProgressBar
        android:id="@+id/progress_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:max="100"
        android:visibility="gone" />
        </LinearLayout>

</LinearLayout>